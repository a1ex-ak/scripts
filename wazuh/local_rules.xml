<!-- USB storage monitoring -->

<group name="Windows-usb-detect.rules,">
  <rule id="111000" level="7">
    <if_sid>60103</if_sid>
    <field name="win.system.eventID">^6416$</field>
    <match>USBSTOR\\Disk</match>
    <options>no_full_log</options>
    <description>Windows: PNP устройство $(win.eventdata.deviceDescription) подключено к $(win.system.computer)</description>
    <options>alert_by_email</options>
  </rule>

</group>

