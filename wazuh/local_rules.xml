<!-- UserGate rules -->

<group name="UserGate.rules,">
  <rule id="100101" level="3">
    <decoded_as>usergate_1</decoded_as>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(traffic_type) -> соединение от $(srcip):$(srcport) к $(dstip):$(dstport) обнаружено.</description>
  </rule>

  <rule id="100102" level="8">
    <if_sid>100101</if_sid>
    <field name="traffic_type">ddos_protection</field>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(traffic_type) от $(srcip):$(srcport) к $(dstip):$(dstport) обнаружен.</description>
  </rule>

  <rule id="100103" level="3">
    <decoded_as>usergate_2</decoded_as>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: $(event_type) -> соединение от $(srcip) пользователя $(srcuser) $(event_event) $(event_action) обнаружено.</description>
  </rule>

  <rule id="100104" level="10">
    <if_sid>100103</if_sid>
    <field name="event_type">admin_console</field>
    <options>no_full_log</options>
    <description>UserGate [$(usergate.node)]: администартор $(srcuser) из $(srcip) обработал $(event_action).</description>
  </rule>
  
</group>

<!-- UserGate IDPS rules -->

<group name="UserGat_idps.rules,">
  <rule id="120001" level="14">
    <match type="pcre2">CEF:\d+|[\w\d-]+|UTM|\d+|idps|[\w\d\s=@.-]+|</match>
    <decoded_as>usergate_idps</decoded_as>
    <description>Usergate ($(utmname)) обнаружил атаку $(attackname) из зоны $(sourcezone) IP $(sourceip) порт $(sourceport) в зону $(dstzone) ip $(dstip) port $(dstport)</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="120002" level="8">
    <match type="pcre2">CEF:\d+\|[\w\d-]+\|UTM\|\d+\|events\|vpn_server\|</match>
    <match>user_login_success|user_disconnected</match>
    <decoded_as>usergate_vpn</decoded_as>
    <description>Usergate ($(utmname)). VPN-сервис. Пользователь $(vpnuser) $(action) с IP $(sourceip).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="120003" level="8">
    <match type="pcre2">CEF:\d+\|[\w\d-]+\|UTM\|\d+\|events\|vpn_server\|</match>
    <match>user_login_failed</match>
    <decoded_as>usergate_vpn</decoded_as>
    <description>Usergate ($(utmname)). VPN-сервис. Пользователь $(vpnuser) $(action) с IP $(sourceip).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="120004" level="8">
    <match type="pcre2">CEF:\d+\|[\w\d-]+\|UTM\|\d+\|events\|admin_console\|</match>
    <decoded_as>usergate_admin_console</decoded_as>
    <description>Usergate ($(utmname)). Настроить. Пользователь $(adminconsoleuser) $(action) с IP $(sourceip).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

</group>

<!-- Cisco SG rules -->

<group name="Cisco_SG.rules,">
  <rule id="110001" level="14">
    <match>%AAA-I-CONNECT:</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG подключен. Статус $(action) ($(conn)). Пользователь $(dstuser). Исходный IP: $(sourceip)</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="110002" level="3">
    <match>%AAA-I-DISCONNECT:</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG отключен. Статус $(action) ($(conn)). Пользователь $(dstuser). Исходный IP: $(sourceip)</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="110003" level="14">
    <match>%SNMP-W-SNMPAUTHFAIL:</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG SNMP ошибка аутентификации с IP $(sourceip).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="110004" level="14">
    <match>%LINK-W-Down:</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG. Порт $(portdown) $(action).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="110005" level="14">
    <match type="pcre2">%NT_GREEN-W-EeeLldp\w+Neighbour</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG LLDP. Тип $(typelldp) порт $(portlldp) статус $(statuslldp).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

  <rule id="110006" level="14">
    <match>%AAA-W-REJECT:</match>
    <decoded_as>cisco_sg</decoded_as>
    <description>Cisco SG подключен. Отклонено подключение ssh с $(sourceip) к $(destip).</description>
    <!-- <options>alert_by_email</options> -->
  </rule>

</group>
